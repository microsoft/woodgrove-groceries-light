<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="icon" type="image/x-icon" href="~/azva-favicon.ico">
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<body>
    <header class="header" id="header">
        <div id="headerContainer" class="container" style="padding-top: 20px; padding-bottom: 20px;">
            <nav class="navbar navbar-expand-lg">
                <div class="container-fluid">
                    <a asp-page="/Index">
                        <img src="/images/logo.png" height="33" alt="Zava logo" style="padding-left: 10px;" />
                    </a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarContent" aria-controls="navbarContent" aria-expanded="false"
                        aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="collapse navbar-collapse" id="navbarContent">
                        <div class="navbar-nav me-auto mb-2">

                        </div>
                        <partial name="_LoginPartial" />

                    </div>
                </div>
            </nav>
        </div>
        @RenderSection("header", required: false)
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="azva-footer mt-auto">
        <div class="container">
            <div class="row py-4">
                <div class="col-md-3">
                    <h5 class="footer-title">Zava online</h5>
                    <p class="footer-text">Fresh groceries delivered to your door. Quality products, exceptional service.</p>
                </div>
                <div class="col-md-2">
                    <h6 class="footer-subtitle">Shop</h6>
                    <ul class="list-unstyled footer-links">
                        <li><a href="#" class="footer-link">Fresh Produce</a></li>
                        <li><a href="#" class="footer-link">Dairy & Eggs</a></li>
                        <li><a href="#" class="footer-link">Meat & Seafood</a></li>
                        <li><a href="#" class="footer-link">Pantry</a></li>
                    </ul>
                </div>
                <div class="col-md-2">
                    <h6 class="footer-subtitle">Support</h6>
                    <ul class="list-unstyled footer-links">
                        <li><a asp-page="/Help" class="footer-link">Help Center</a></li>
                        <li><a href="#" class="footer-link">Contact Us</a></li>
                        <li><a href="#" class="footer-link">Delivery Info</a></li>
                        <li><a href="#" class="footer-link">Returns</a></li>
                    </ul>
                </div>
                <div class="col-md-2">
                    <h6 class="footer-subtitle">Company</h6>
                    <ul class="list-unstyled footer-links">
                        <li><a href="#" class="footer-link">About Us</a></li>
                        <li><a href="#" class="footer-link">Careers</a></li>
                        <li><a asp-page="/Privacy" class="footer-link">Privacy Policy</a></li>
                        <li><a href="#" class="footer-link">Terms of Service</a></li>
                    </ul>
                </div>
                <div class="col-md-3">
                    <h6 class="footer-subtitle">Connect With Us</h6>
                    <div class="footer-social">
                        <a href="#" class="footer-social-link me-3"><i class="bi bi-facebook"></i></a>
                        <a href="#" class="footer-social-link me-3"><i class="bi bi-twitter"></i></a>
                        <a href="#" class="footer-social-link me-3"><i class="bi bi-instagram"></i></a>
                        <a href="#" class="footer-social-link"><i class="bi bi-linkedin"></i></a>
                    </div>
                    <div class="mt-3">
                        <p class="footer-text small">Subscribe to our newsletter for special offers and updates.</p>
                    </div>
                </div>
            </div>
            <hr class="footer-divider">
            <div class="row py-3">
                <div class="col-md-6">
                    <p class="footer-copyright mb-0">© 2025 Zava online. All rights reserved.</p>
                </div>
                <div class="col-md-6 text-md-end">
                    
                </div>
            </div>
        </div>
    </footer>

    <!-- jQuery first, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
